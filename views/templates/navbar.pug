.container
  .row
    .navbar-div
      ul.navbar
        li(class=pageTitle || 'active')
          a(href='/') Home
        li(class=pageTitle === 'About' ? 'active' : '')
          a(href='/about') About
        li(class=pageTitle === 'Contact' ? 'active' : '')
          a(href='/contact') Contact
        li(class=pageTitle === 'Order' ? 'active' : '')
          a(href='/order') Order

        if email
          li Logged in as #{email}
        else

          li(class=pageTitle === 'Login' ? 'active' : '')
            a(href='/login') Login
          li(class=pageTitle === 'Register' ? 'active' : '')
            a(href='/register') Register
