extends layout.pug

//- This tag is needed for pug to plug the html in the layout
block content

  .container
    form(method='POST').form-horizontal.contact-form
      .form-group
        h1 Contact Us

      .form-group
        label(for='name') First Name
      .form-group
        input#name(type='text' name='name' placeholder='Name')

      .form-group
        label(for='email') Email
      .form-group
        input#email(type='email' name='email' placeholder='Email')

      .form-group
        label(for='message') Comments
      .form-group
        textarea#message(rows='4' name='message')

      .form-group
        button.btn Cancel
        button.btn Submit
